#include <bits/stdc++.h>

int main()
{
    int N, sum = 0;
    scanf("%d", N);
    std::vector<int> A[3*N];
    for(int i = 0; i < 3*N; i++) {
	scanf("%d", &A[i]);
    }
    std::sort(A.begin(). A.end());
    for(int i = 0; i < N; i++) {
	sum += A[3*N - 1 - (2*i + 1)];
    }
    std::cout << sum << std::endl;
}
